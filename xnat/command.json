{
    "name": "mri_reface",
    "description": "Runs mri_reface on a DICOM scan.",
    "label": "dcm2niix",
    "info-url": "https://github.com/kelseym/mri_reface",
    "version": "dev",
    "schema-version": "1.0",
    "type": "docker",
    "image": "xnat/mri_reface:dev",
    "command-line": "run_mri_reface.sh /input /output",
    "mounts": [
        {
            "name": "in",
            "writable": "true",
            "path": "/input"
        },
        {
            "name": "out",
            "writable": "true",
            "path": "/output"
        }
    ],
    "inputs": [],
    "outputs": [
        {
            "name": "output",
            "description": "The output file.",
            "mount": "out",
            "required": true
        }
    ],
    "xnat": [
        {
            "name": "mri-reface-scan",
            "description": "Run MRI Reface on a Scan",
            "label": "mri-reface-scan",
            "contexts": ["xnat:imageScanData"],
            "external-inputs": [
                {
                    "name": "scan",
                    "description": "Input scan",
                    "type": "Scan",
                    "required": true,
                    "matcher": "'DICOM' in @.resources[*].label"
                }
            ],
            "derived-inputs": [
                {
                    "name": "scan-dicoms",
                    "description": "The dicom resource on the scan",
                    "type": "Resource",
                    "derived-from-wrapper-input": "scan",
                    "provides-files-for-command-mount": "in",
                    "matcher": "@.label == 'DICOM'"
                }
            ],
            "output-handlers": [
                {
                    "name": "reface-resource",
                    "accepts-command-output": "output",
                    "as-a-child-of-wrapper-input": "scan",
                    "type": "Resource",
                    "label": "REFACED"
                }
            ]
        }
    ]
}